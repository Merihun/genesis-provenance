# Database
DATABASE_URL=postgresql://user:password@localhost:5432/genesis_provenance

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Node Environment
NODE_ENV=development

# AWS S3 (for file uploads) - CONFIGURED
AWS_PROFILE=hosted_storage
AWS_REGION=us-west-2
AWS_BUCKET_NAME=your-bucket-name
AWS_FOLDER_PREFIX=your-prefix/

# Email Service (Resend) - CONFIGURED
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM="Genesis Provenance <noreply@yourdomain.com>"

# Google Cloud Vision AI - CONFIGURED
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./genesis-vision-key.json
GOOGLE_VISION_ENABLED=true

